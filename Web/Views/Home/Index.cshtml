@{
    ViewBag.Title = "Home Page";
}
<h2>Chat</h2>
<div class="container">
    登录账号：<span id="username"></span>
    <h4>登录列表</h4>
    <ul id="userlist"></ul>
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" disabled />
    <input type="hidden" id="displayname" />
    <h4>聊天记录</h4>
    <ul id="discussion"></ul>
</div>
<style>
    .active{
        background-color: darkgrey;
        color:#fff;
    }
</style>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.notificationHub;
            var user = prompt('Enter your name:', '');
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMsgByUser = function (from_name, to_user, message) {
                // Add the message to the page.
                console.log(message);
                $('#discussion').append('<li><strong>' + htmlEncode(from_name)
                    + '</strong>: ' + htmlEncode(message) + '</li>');
            };
            chat.client.updateUserList = function (userlist) {
                var $userlist = $('#userlist');
                console.log('userlist', userlist);
                $userlist.empty();
                for (var i = 0; i < userlist.length; i++) {
                    if (user != userlist[i].Name) {
                        $userlist.append('<li><a href="#">' + userlist[i].Name + '</a></li>');
                    }
                    
                }
            }
            chat.client.addNewMsg = function (from_name, message) {
                // Add the message to the page.
                console.log(message);
                $('#discussion').append('<li><strong>' + htmlEncode(from_name)
                    + '</strong>: ' + htmlEncode(message) + '</li>');
            };
            // Get the user name and store it to prepend to messages.
            $('#displayname').val(user);
            $('#username').text(user);
            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                chat.server.login(user, '');
                var send_user = '';
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    if (send_user != '') {
                        chat.server.send(send_user, $('#message').val());
                        // Clear text box and reset focus for next comment.
                        $('#message').val('').focus();
                    }
                });
                $(document).on('click', '#userlist li a', function () {
                    send_user = $(this).text();
                    $('#userlist li a').removeClass('active');
                    $(this).addClass('active');
                    $('#sendmessage').prop({ disabled: false });
                    console.log('send_user', send_user);
                    return false;
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}